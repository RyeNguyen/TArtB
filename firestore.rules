rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Artworks collection - Public read access, no client writes
    match /artworks/{artworkId} {
      // Anyone can read artworks
      allow read: if true;

      // Only Cloud Functions can write (clients are denied)
      allow write: if false;
    }

    // Metadata collection - Public read access for stats
    match /metadata/{docId} {
      // Anyone can read metadata (e.g., last refresh stats)
      allow read: if true;

      // Only Cloud Functions can write
      allow write: if false;
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
